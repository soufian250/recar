                        </a>
                        <ul id="client-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                            <li>
                                <a href="{{ path('client_add') }}">
                                    <i class="bi bi-sd-card"></i><span>Ajouter un client</span>
                                </a>
                            </li>

                            <li>
                                <a href="{{ path('client_show') }}">
                                    <i class="bi bi-sd-card"></i><span>Afficher un client</span>
                                </a>
                            </li>

                        </ul>
                    </li><!-- End CLient Nav -->

                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-target="#blog-nav" data-bs-toggle="collapse" href="#">
                            <i class="bi bi-menu-button-wide"></i><span>Blog </span><i class="bi bi-chevron-down ms-auto"></i>
                        </a>
                        <ul id="blog-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                            <li>
                                <a href="{{ path('post_list') }}">
                                    <i class="bi bi-sd-card"></i><span>List des articles</span>
                                </a>
                            </li>

                            <li>
                                <a href="{{ path('post_add') }}">
                                    <i class="bi bi-sd-card"></i><span>Ajouter article</span>
                                </a>
                            </li>

                        </ul>
                    </li><!-- End Blog Nav -->

                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-target="#config-nav" data-bs-toggle="collapse" href="#">
                            <i class="bi bi-menu-button-wide"></i><span>Configuration </span><i class="bi bi-chevron-down ms-auto"></i>
                        </a>
                        <ul id="config-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                            <li>
                                <a href="{{ path('configuration_add') }}">
                                    <i class="bi bi-sd-card"></i><span>Configurer voiture</span>
                                </a>
                            </li>

                        </ul>
                    </li><!-- End Config Nav -->


                </ul>

            </aside><!-- End Sidebar-->
        {% endblock %}

